<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="836.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.HelloController">
   <top>
      <ToolBar minWidth="836.0">
        <items>
            
          <Button fx:id="ImgAddBtn" mnemonicParsing="false" onAction="#addPerson">
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@plus.png" />
                     </image></ImageView>
               </graphic>
            </Button>
            <Button fx:id="ImgDeleteBtn" disable="true" mnemonicParsing="false" onAction="#deletePerson" prefHeight="23.0" prefWidth="25.0">
               <graphic>
                  <ImageView fitHeight="19.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@minus.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="ImgEditBtn" disable="true" mnemonicParsing="false" onAction="#editPerson" prefHeight="21.0" prefWidth="23.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@update.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="ImgSaveBtn" mnemonicParsing="false" onAction="#saveTree">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@save.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="ImgOpenBtn" mnemonicParsing="false" onAction="#openTree">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@open.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="ImgCloseBtn" mnemonicParsing="false" onAction="#closeTree">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@close.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
        </items>
      </ToolBar>
   </top>
   <center>
       <TabPane maxWidth="Infinity" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <tabs>
               <Tab text="Графическое отображение">
                   <content>
                       <AnchorPane minHeight="0.0" minWidth="0.0" />
                   </content>
               </Tab>
               <Tab text="Список">
                   <content>
                       <AnchorPane disable="true" focusTraversable="true" maxHeight="Infinity" maxWidth="Infinity" minHeight="0.0" minWidth="0.0">
                           <children>
                               <TableView fx:id="tableView" onMouseClicked="#openCard" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                   <columns>
                              <TableColumn fx:id="colId" prefWidth="75.0" text="id" />
                                       <TableColumn fx:id="colSurname" text="Фамилия" />
                                       <TableColumn fx:id="colName" text="Имя" />
                                       <TableColumn fx:id="colPatronymic" text="Отчество" />
                                       <TableColumn fx:id="colNickname" text="Прозвище" />
                                       <TableColumn fx:id="colAge" text="Дата рождения" />
                                       <TableColumn fx:id="colGender" text="Пол" />
                                   </columns>
                                   <columnResizePolicy>
                                       <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                   </columnResizePolicy>
                               </TableView>
                           </children>
                       </AnchorPane>
                   </content>
               </Tab>
           </tabs>
       </TabPane>

   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addPerson" prefHeight="25.0" prefWidth="100.0" text="Добавить" textAlignment="CENTER" />
            <Button fx:id="editBtn" disable="true" mnemonicParsing="false" onAction="#editPerson" prefHeight="25.0" prefWidth="100.0" text="Редактировать" textAlignment="CENTER" />
            <Button fx:id="deleteBtn" cache="true" disable="true" mnemonicParsing="false" onAction="#deletePerson" prefWidth="100.0" text="Удалить" textAlignment="CENTER" />
            <Button fx:id="openBtn" mnemonicParsing="false" onAction="#openTree" prefWidth="100.0" text="Открыть" textAlignment="CENTER" />
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveTree" prefHeight="25.0" prefWidth="100.0" text="Сохранить" textAlignment="CENTER" />
            <Button fx:id="claseBtn" mnemonicParsing="false" onAction="#closeTree" prefHeight="25.0" prefWidth="100.0" text="Закрыть" textAlignment="CENTER" />
         </children>
      </VBox>
   </right>
</BorderPane>
